# exa aliasing
alias ls="exa -F"
alias l="exa -aF"
alias ll="exa -lghF"
alias la="exa -laghF"
alias lt="exa -TF"
alias lg="exa -laghF --git"
#alias cat="batcat"
alias cp="rsync -av --progress"
alias clipboard="xclip -sel clip"

