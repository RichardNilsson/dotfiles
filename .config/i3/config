# Create a sysmenu for restarting, logging out, powering down and so on
set $sysmenu "system:  [r]eload  [l]ogout  [p]oweroff  re[b]oot"
bindsym $mod+Delete      mode $sysmenu

mode $sysmenu {
    bindsym r         restart
    bindsym l         exit
    bindsym p         exec shutdown -P now
    bindsym b         exec shutdown -r now
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# Replace i3-logout with menu that can be used by keyboard
set $logoutmenu "i3 [l]ogout"
bindsym $mod+Shift+e     mode $logoutmenu

mode $logoutmenu {
    bindsym l         exit
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# Create a audiomenu for controlling audio
set $audiomenu "volume:  [+]10%  [-]10%  [m]ute  [r]eset"
bindcode 152         mode $audiomenu

mode $audiomenu {
    bindsym r             exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- 100%
    bindsym plus          exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- +10%
    bindsym KP_Add        exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- +10%
    bindsym minus         exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- -10%
    bindsym KP_Subtract   exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- -10%
    bindsym m             exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym Return        mode "default"
    bindsym Escape        mode "default"
}

# Menu for controlling rhythmbox
set $rhythmboxmenu "controls: [p]lay/[p]ause [m]ute [r]aise volume" 
bindcode 128         mode $rhythmboxmenu # bindcode 128 = F12

mode $rhythmboxmenu {
    bindsym p             exec --no-startup-id playerctl --player=rhythmbox play-pause
   # bindsym plus          exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- +10%
   # bindsym KP_Add        exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- +10%
   # bindsym minus         exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- -10%
   # bindsym KP_Subtract   exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- -10%
    bindsym m             exec --no-startup-id playerctl --player=rhythmbox volume 0
    bindsym r		  exec --no-startup-id playerctl --player=rhythmbox volume 1
    bindsym Return        mode "default"
    bindsym Escape        mode "default"
}


